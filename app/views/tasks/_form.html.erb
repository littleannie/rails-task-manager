<%= form_with model: task do |f| %>
  <%= f.label :title, "Task title", :class =>"form-label" %>
  <%= f.text_field :title, :class =>"form-control mb-3" %>
  <%= f.label :details, "Task details", :class =>"form-label" %>
  <%= f.text_area :details, :class =>"form-control mb-3" %>
  <% if task.persisted? %>
    <%= f.check_box :completed, :class =>"form-check-input" %>
    <%= f.label :completed, "Completed", :class =>"form-label"  %><br>
  <% end %>
  <%= f.submit :Submit, :class =>"btn btn-primary mt-3" %>
<% end %>
